<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header.ejs") %> <%- include("partials/nav-bar.ejs",
  {title: "My Blog", options: [{ name: "Home", link: "/" }]} ) %>
  <body>
    <main class="flex-shrink-0 mb-3 align-items-center">
      <div class="container-fluid">
        <div class="mb-3 col-6">
          <h1><%= data.title %></h1>
        </div>
        <div class="mb-3 col-6">
          <h3><%= data.category %></h3>
        </div>
        <div class="mb-3 col-12">
          <p><%= data.description %></p>
        </div>
        <div class="col-12">
          <a
            class="btn btn-primary"
            href="/edit?index=<%= index %>"
            role="button"
            >Edit Post</a
          >
          <a
            class="btn btn-danger"
            href="/delete?index=<%= index %>"
            role="button"
            >Delete Post</a
          >
        </div>
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
  </body>
</html>
